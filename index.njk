---
pagination: 
    data: collections.posts
    size: 5
    alias: posts
    reverse: true
layout: layouts/base.njk
---


{% for post in posts %}
<div class="post-preview">
  <a href="{{ post.url | url }}">
    <h2 class="post-title">
       {{ post.data.title }}
    </h2>
    <h3 class="post-subtitle">
       {{ post.data.description }}
    </h3>
  </a>
</div>
<hr>
{% endfor %}

{# <pre>{{ pagination | dump }}</pre> #}

<div style = "text-align: center;">
{% if pagination.previous %}
<a class = "btn btn-primary float-left" href = "{{ pagination.previousPageLink | url}}">Newer Posts</a>
{% endif %}

{% if pagination.next %}
<a class = "btn btn-primary float-right" href = "{{ pagination.nextPageLink | url}}">Older Posts</a>

{% endif %}
</div>